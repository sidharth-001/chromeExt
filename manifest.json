{
    "name": "Bulk Image Downloader",
    "description": "Download all images on a web page",
    "version": "2.6",
    "permissions": ["<all_urls>", "tabs", "activeTab"],
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["/resources/jquery-3.4.1.min.js", "content.js"]
    }],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "manifest_version": 2
}
